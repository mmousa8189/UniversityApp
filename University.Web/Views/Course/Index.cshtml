@model IList< University.DataAccess.Models.Course>

    <br />
    <br />
    <div class="border p-4 bg-white">
    <div class="row">
        <div class="col-8">
            <h2 class="text-info"> Course List</h2>
        </div>
      
        <div class=" col-2 text-right">
            <a asp-action="Create" class="btn btn-info form-control"> Create New </a>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        CourseName
                    </th>
                    <th>
                        Description
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.CourseName
                        </td>
                        <td>
                            @item.Description
                        </td>
                       
                      
                        <td>
                            <a class="btn btn-primary text-white" asp-action="Edit" asp-route-Id="@item.Id">
                                Edit
                            </a>
                            <a class="btn btn-info text-white" asp-action="AssignStudents" asp-route-Id="@item.Id">
                                Assign Students
                            </a> 
                            <a class="btn btn-info text-white" asp-action="ViewCourseWithStudents" asp-route-Id="@item.Id">
                                View Students
                            </a>
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-Id="@item.Id">
                                Delete
                            </a>

                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No Courses exists...</p>
        }
    </div>
</div>
