@model IList<University.DataAccess.Models.Student>

<br />
<br />
<div class="border p-4 bg-white">
    <div class="row">
        <div class="col-8">
            <h2 class="text-info"> Student List</h2>
        </div>

        <div class=" col-2 text-right">
            <a asp-action="Create" class="btn btn-info form-control"> Create New </a>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        BOD
                    </th>
                    <th>
                        H
                    </th>
                    <th>
                        W
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.DateOfBirth.ToString($"{0:dd/MM/yyyy}")
                </td>
                <td>
                    @item.Height
                </td>
                <td>
                    @item.Weight
                </td>


                <td>
                    <a class="btn btn-primary text-white" asp-action="Edit" asp-route-Id="@item.Id">
                        Edit
                    </a>
                    <a class="btn btn-danger text-white" asp-action="Delete"  asp-route-Id="@item.Id">
                        Delete
                    </a>

                </td>
            </tr>
                }
            </table>
        }
        else
        {
            <p>No Students exists...</p>
        }
    </div>
</div>
